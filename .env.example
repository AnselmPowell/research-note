# Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# NEON AUTH (Required for authentication)
# ============================================
VITE_NEON_AUTH_URL=https://your-neon-auth-url.neon.tech
VITE_NEON_PROJECT_ID=your-project-id

# ============================================
# Microsoft OAuth (Required for MS login)
# ============================================
VITE_MS_CLIENT_ID=your-microsoft-client-id
VITE_MS_TENANT_ID=your-microsoft-tenant-id

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# Backend API Keys (NOT exposed to client)
# These are used by the backend service only
# ============================================
GEMINI_API_KEY=your-gemini-api-key
DATABASE_URL=your-neon-database-url
GOOGLE_SEARCH_KEY=your-google-search-key
GOOGLE_SEARCH_CX=your-google-search-cx
OPENAI_API_KEY=your-openai-api-key

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=3001
